<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.emu.joelwifidirect.MainActivity">

    <TextView
        android:text="MultiPong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/titleText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="46dp"
        android:id="@+id/deviceNameEdit"
        android:layout_below="@+id/titleText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp" />

    <Button
        android:text="Set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deviceNameEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/setNameButton" />

    <TextView
        android:text="Device name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deviceNameText"
        android:layout_alignBottom="@+id/deviceNameEdit"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Host game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hostButton"
        android:layout_below="@+id/titleText"
        android:layout_alignEnd="@+id/deviceNameEdit"
        android:layout_marginEnd="35dp" />

    <Button
        android:text="Find Peers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleText"
        android:layout_toStartOf="@+id/hostButton"
        android:layout_marginEnd="37dp"
        android:id="@+id/findPeersMainButton" />
</RelativeLayout>
