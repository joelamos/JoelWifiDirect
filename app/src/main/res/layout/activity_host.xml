<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_host"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.emu.joelwifidirect.HostActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/startButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:id="@+id/hostPeerList" />

    <TextView
        android:text="Group size: 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupSizeText"
        android:layout_below="@+id/startButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Start Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="47dp" />

    <Button
        android:text="Find peers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hostPeerList"
        android:layout_toStartOf="@+id/groupSizeText"
        android:id="@+id/findPeersHostButton" />
</RelativeLayout>
